#include <windows.h>
#include <iostream>

class Color
{
private:
	int R, G, B;
public:
	Color()
	{}
	~Color()
	{}
};

class Circle
{
private:
	int x1, size, angle, aspeed, speed;
	bool direction;
	Color color;

public:
	Circle()
	{}

	~Circle()
	{}
};

class Rhombus
{
	private:
	int x1, size, angle, aspeed, speed;
	bool direction;
	Color color;

public:
	Rhombus()
	{}

	~Rhombus()
	{}
};

class Parallelogram
{
	private:
	int x1, size, angle, aspeed, speed;
	bool direction;
	Color color;

public:
	Parallelogram()
	{}

	~Parallelogram()
	{}
};

int WINAPI WinMain(HINSTANCE hInstance, // дескриптор экземпляра приложения
                   HINSTANCE hPrevInstance, // в Win32 не используется
                   LPSTR lpCmdLine, // нужен для запуска окна в режиме командной строки
                   int nCmdShow) // режим отображения окна
{
        MessageBox(NULL, L"Привет, мир!!!", L"Оконная процедура", MB_OK);
        return NULL;
}
